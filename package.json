{
  "name": "lexilearn",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=.env.development --hot src/index.ts",
    "build": "tsc && bun start",
    "drizzle:gen": "NODE_ENV=development bun drizzle-kit generate",
    "drizzle:migrate": "NODE_ENV=development bun drizzle-kit migrate",
    "start": "bun --env-file=.env.production dist/src/index.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "hono": "^4.4.4",
    "postgres": "^3.4.4",
    "radash": "^12.1.0",
    "valibot": "^0.31.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.22.6",
    "@hono/valibot-validator": "^0.3.0",
    "@t3-oss/env-core": "^0.10.1"
  }
}